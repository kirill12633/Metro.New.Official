    <script>
        // –û–∂–∏–¥–∞–Ω–∏–µ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏ Firebase
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('DOM –∑–∞–≥—Ä—É–∂–µ–Ω, –æ–∂–∏–¥–∞–µ–º Firebase...');
            
            const checkFirebase = setInterval(() => {
                if (window.auth && window.db) {
                    clearInterval(checkFirebase);
                    initApplication();
                }
            }, 100);
            
            setTimeout(() => {
                if (!window.auth) {
                    showMessage('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ Firebase', 'error');
                }
            }, 5000);
        });

        async function initApplication() {
            try {
                console.log('–ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è...');
                
                // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
                initUI();
                
                // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
                checkAuthState();
                
                console.log('–ü—Ä–∏–ª–æ–∂–µ–Ω–∏–µ –∑–∞–ø—É—â–µ–Ω–æ');
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏–∏:', error);
                showMessage('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è', 'error');
            }
        }

        function initUI() {
            console.log('–ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞...');
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –≤—ã–ø–∞–¥–∞—é—â–µ–≥–æ –º–µ–Ω—é
            initDropdown();
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–æ–≤ —Å–æ–±—ã—Ç–∏–π
            initEventHandlers();
            
            // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            initNavigation();
            
            console.log('–ò–Ω—Ç–µ—Ä—Ñ–µ–π—Å –∏–Ω–∏—Ü–∏–∞–ª–∏–∑–∏—Ä–æ–≤–∞–Ω');
        }

        function initDropdown() {
            const userDropdown = document.getElementById('userDropdown');
            
            userDropdown.addEventListener('click', function(e) {
                e.stopPropagation();
                this.classList.toggle('show');
            });
            
            document.addEventListener('click', function() {
                userDropdown.classList.remove('show');
            });
        }

        function initNavigation() {
            // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –º–µ–∂–¥—É —Ä–∞–∑–¥–µ–ª–∞–º–∏
            document.querySelectorAll('.sidebar-menu a').forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    
                    const section = this.getAttribute('data-section');
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –∞–∫—Ç–∏–≤–Ω—É—é —Å—Å—ã–ª–∫—É
                    document.querySelectorAll('.sidebar-menu a').forEach(a => a.classList.remove('active'));
                    this.classList.add('active');
                    
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –Ω—É–∂–Ω—ã–π —Ä–∞–∑–¥–µ–ª
                    document.querySelectorAll('.content-section').forEach(div => div.style.display = 'none');
                    document.getElementById(section + 'Section').style.display = 'block';
                    
                    // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–∞–Ω–Ω—ã–µ —Ä–∞–∑–¥–µ–ª–∞
                    loadSectionData(section);
                });
            });
        }

        function initEventHandlers() {
            // –ö–Ω–æ–ø–∫–∞ –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –¥–∞–Ω–Ω—ã—Ö
            document.getElementById('refreshDataBtn')?.addEventListener('click', async function() {
                const user = auth.currentUser;
                if (user) {
                    await loadUserData(user.uid);
                    showMessage('–î–∞–Ω–Ω—ã–µ –æ–±–Ω–æ–≤–ª–µ–Ω—ã', 'success');
                }
            });
            
            // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –ø—Ä–æ—Ñ–∏–ª—è
            document.getElementById('saveProfileBtn')?.addEventListener('click', async function() {
                await saveProfile();
            });
            
            // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –Ω–∞—Å—Ç—Ä–æ–µ–∫
            document.getElementById('saveSettingsBtn')?.addEventListener('click', async function() {
                await saveSettings();
            });
            
            // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –º–µ–∂–¥—É –º–æ–¥–∞–ª–∫–∞–º–∏
            document.getElementById('showRegisterBtn')?.addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById('authModal').classList.remove('show');
                document.getElementById('registerModal').classList.add('show');
            });
            
            document.getElementById('showLoginBtn')?.addEventListener('click', function(e) {
                e.preventDefault();
                document.getElementById('registerModal').classList.remove('show');
                document.getElementById('authModal').classList.add('show');
            });
            
            // –í—Ö–æ–¥
            document.getElementById('loginSubmitBtn')?.addEventListener('click', async function() {
                await signInWithEmail();
            });
            
            // –†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è
            document.getElementById('registerSubmitBtn')?.addEventListener('click', async function() {
                await signUpWithEmail();
            });
            
            // –ó–∞–∫—Ä—ã—Ç–∏–µ –º–æ–¥–∞–ª–æ–∫
            document.querySelectorAll('.modal-close').forEach(btn => {
                btn.addEventListener('click', function() {
                    this.closest('.modal').classList.remove('show');
                });
            });
            
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.classList.remove('show');
                    }
                });
            });
            
            // –ö–ª–∏–∫ –ø–æ –∞–≤–∞—Ç–∞—Ä–∫–µ –¥–ª—è –æ—Ç–∫—Ä—ã—Ç–∏—è –º–µ–Ω—é
            document.querySelector('.user-profile')?.addEventListener('click', function(e) {
                if (!e.target.closest('.dropdown-menu')) {
                    this.classList.toggle('show');
                }
            });
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ Enter –≤ —Ñ–æ—Ä–º–∞—Ö
            document.getElementById('loginEmail')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') signInWithEmail();
            });
            
            document.getElementById('loginPassword')?.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') signInWithEmail();
            });
        }

        function checkAuthState() {
            console.log('–ü—Ä–æ–≤–µ—Ä–∫–∞ —Å–æ—Å—Ç–æ—è–Ω–∏—è –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏...');
            
            const { onAuthStateChanged } = window.firebaseModules;
            
            onAuthStateChanged(auth, async (user) => {
                console.log('–ò–∑–º–µ–Ω–µ–Ω–∏–µ —Å–æ—Å—Ç–æ—è–Ω–∏—è:', user ? '–í—Ö–æ–¥' : '–í—ã—Ö–æ–¥');
                
                if (user) {
                    // –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤–æ—à—ë–ª
                    await updateUIForUser(user);
                    await loadUserData(user.uid);
                } else {
                    // –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –≤—ã—à–µ–ª
                    updateUIForGuest();
                    showLoginModal();
                }
            });
        }

        async function updateUIForUser(user) {
            console.log('–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –¥–ª—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è:', user.uid);
            
            const displayName = user.displayName || '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å';
            const email = user.email || '–ë–µ–∑ email';
            const photoURL = user.photoURL;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Ö–µ–¥–µ—Ä
            document.getElementById('userName').textContent = displayName;
            document.getElementById('userStatus').textContent = email;
            
            const userAvatar = document.getElementById('userAvatar');
            if (photoURL) {
                userAvatar.innerHTML = `<img src="${photoURL}" alt="${displayName}">`;
            } else {
                userAvatar.innerHTML = '<i class="fas fa-user-circle"></i>';
            }
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å–∞–π–¥–±–∞—Ä
            document.getElementById('sidebarName').textContent = displayName;
            document.getElementById('sidebarEmail').textContent = email;
            
            const sidebarAvatar = document.getElementById('sidebarAvatar');
            if (photoURL) {
                sidebarAvatar.innerHTML = `<img src="${photoURL}" alt="${displayName}">`;
            } else {
                sidebarAvatar.innerHTML = '<i class="fas fa-user-circle"></i>';
            }
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –º–µ–Ω—é
            updateUserMenu(user);
            
            // –°–∫—Ä—ã–≤–∞–µ–º –º–æ–¥–∞–ª–∫–∏ –∞–≤—Ç–æ—Ä–∏–∑–∞—Ü–∏–∏
            document.getElementById('authModal').classList.remove('show');
            document.getElementById('registerModal').classList.remove('show');
        }

        function updateUIForGuest() {
            console.log('–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞ –¥–ª—è –≥–æ—Å—Ç—è');
            
            document.getElementById('userName').textContent = '–ì–æ—Å—Ç—å';
            document.getElementById('userStatus').textContent = '–í–æ–π—Ç–∏ –≤ –∞–∫–∫–∞—É–Ω—Ç';
            document.getElementById('userAvatar').innerHTML = '<i class="fas fa-user-circle"></i>';
            
            document.getElementById('sidebarName').textContent = '–ì–æ—Å—Ç—å';
            document.getElementById('sidebarEmail').textContent = '–ù–µ –∞–≤—Ç–æ—Ä–∏–∑–æ–≤–∞–Ω';
            document.getElementById('sidebarAvatar').innerHTML = '<i class="fas fa-user-circle"></i>';
            
            // –û–±–Ω—É–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
            document.getElementById('totalKm').textContent = '0';
            document.getElementById('stationsVisited').textContent = '0';
            document.getElementById('trainsDriven').textContent = '0';
            document.getElementById('achievementsCount').textContent = '0';
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –º–µ–Ω—é
            updateGuestMenu();
        }

        function updateUserMenu(user) {
            const userMenu = document.getElementById('userMenu');
            const isAnonymous = user.isAnonymous;
            
            userMenu.innerHTML = `
                <div class="dropdown-header" style="padding: 0.75rem 1rem;">
                    <div style="font-weight: 600;">${user.displayName || '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å'}</div>
                    <small style="color: var(--gray);">${user.email || '–ë–µ–∑ email'}</small>
                </div>
                <div class="dropdown-divider"></div>
                <button class="dropdown-item" onclick="location.reload()">
                    <i class="fas fa-redo"></i>
                    <span>–û–±–Ω–æ–≤–∏—Ç—å</span>
                </button>
                <div class="dropdown-divider"></div>
                <button class="dropdown-item logout" id="logoutBtn">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>–í—ã–π—Ç–∏</span>
                </button>
            `;
            
            // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ –≤—ã—Ö–æ–¥–∞
            setTimeout(() => {
                document.getElementById('logoutBtn')?.addEventListener('click', signOut);
            }, 100);
        }

        function updateGuestMenu() {
            const userMenu = document.getElementById('userMenu');
            
            userMenu.innerHTML = `
                <button class="dropdown-item" id="loginMenuBtn">
                    <i class="fas fa-sign-in-alt"></i>
                    <span>–í–æ–π—Ç–∏ –≤ –∞–∫–∫–∞—É–Ω—Ç</span>
                </button>
                <button class="dropdown-item" id="registerMenuBtn">
                    <i class="fas fa-user-plus"></i>
                    <span>–ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è</span>
                </button>
            `;
            
            setTimeout(() => {
                document.getElementById('loginMenuBtn')?.addEventListener('click', function() {
                    showLoginModal();
                    document.getElementById('userDropdown').classList.remove('show');
                });
                
                document.getElementById('registerMenuBtn')?.addEventListener('click', function() {
                    document.getElementById('userDropdown').classList.remove('show');
                    document.getElementById('registerModal').classList.add('show');
                });
            }, 100);
        }

        function showLoginModal() {
            document.getElementById('authModal').classList.add('show');
        }

        // –§–£–ù–ö–¶–ò–ò –ê–£–¢–ï–ù–¢–ò–§–ò–ö–ê–¶–ò–ò
        async function signInWithEmail() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            const loginError = document.getElementById('loginError');
            
            if (!email || !password) {
                loginError.textContent = '–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è';
                loginError.style.display = 'block';
                return;
            }
            
            try {
                const { signInWithEmailAndPassword } = window.firebaseModules;
                const userCredential = await signInWithEmailAndPassword(auth, email, password);
                
                showMessage(`–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å, ${userCredential.user.displayName || '–ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å'}!`, 'success');
                document.getElementById('loginEmail').value = '';
                document.getElementById('loginPassword').value = '';
                loginError.style.display = 'none';
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –≤—Ö–æ–¥–∞:', error);
                
                let errorMessage = '–û—à–∏–±–∫–∞ –≤—Ö–æ–¥–∞. ';
                if (error.code === 'auth/invalid-login-credentials') {
                    errorMessage = '–ù–µ–≤–µ—Ä–Ω—ã–π email –∏–ª–∏ –ø–∞—Ä–æ–ª—å';
                } else if (error.code === 'auth/user-not-found') {
                    errorMessage = '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –Ω–∞–π–¥–µ–Ω';
                } else if (error.code === 'auth/wrong-password') {
                    errorMessage = '–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å';
                } else {
                    errorMessage += error.message;
                }
                
                loginError.textContent = errorMessage;
                loginError.style.display = 'block';
            }
        }

        async function signUpWithEmail() {
            const username = document.getElementById('registerUsername').value.trim();
            const email = document.getElementById('registerEmail').value;
            const password = document.getElementById('registerPassword').value;
            const confirmPassword = document.getElementById('registerConfirmPassword').value;
            const agreeTerms = document.getElementById('agreeTerms').checked;
            const registerError = document.getElementById('registerError');
            
            // –í–∞–ª–∏–¥–∞—Ü–∏—è
            if (!username || !email || !password || !confirmPassword) {
                registerError.textContent = '–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è';
                registerError.style.display = 'block';
                return;
            }
            
            if (!agreeTerms) {
                registerError.textContent = '–ù–µ–æ–±—Ö–æ–¥–∏–º–æ —Å–æ–≥–ª–∞—Å–∏—Ç—å—Å—è —Å –ø—Ä–∞–≤–∏–ª–∞–º–∏';
                registerError.style.display = 'block';
                return;
            }
            
            if (password !== confirmPassword) {
                registerError.textContent = '–ü–∞—Ä–æ–ª–∏ –Ω–µ —Å–æ–≤–ø–∞–¥–∞—é—Ç';
                registerError.style.display = 'block';
                return;
            }
            
            if (password.length < 6) {
                registerError.textContent = '–ü–∞—Ä–æ–ª—å –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –Ω–µ –º–µ–Ω–µ–µ 6 —Å–∏–º–≤–æ–ª–æ–≤';
                registerError.style.display = 'block';
                return;
            }
            
            try {
                const { createUserWithEmailAndPassword, updateProfile, sendEmailVerification } = window.firebaseModules;
                
                // –°–æ–∑–¥–∞–Ω–∏–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
                const userCredential = await createUserWithEmailAndPassword(auth, email, password);
                
                // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—Ä–æ—Ñ–∏–ª—è
                await updateProfile(userCredential.user, {
                    displayName: username
                });
                
                // –û—Ç–ø—Ä–∞–≤–∫–∞ email –¥–ª—è –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è
                await sendEmailVerification(userCredential.user);
                
                // –°–æ–∑–¥–∞–Ω–∏–µ –¥–æ–∫—É–º–µ–Ω—Ç–∞ –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö
                await createUserInDatabase(userCredential.user.uid, {
                    username: username,
                    email: email,
                    createdAt: new Date().toISOString(),
                    stats: {
                        totalKm: 0,
                        stationsVisited: 0,
                        trainsDriven: 0
                    },
                    achievements: [],
                    settings: {
                        emailNotifications: true,
                        projectNews: true,
                        achievementNotifications: true,
                        darkTheme: false,
                        compactMode: false
                    },
                    profile: {
                        bio: '',
                        favoriteLine: ''
                    }
                });
                
                showMessage('–ê–∫–∫–∞—É–Ω—Ç —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω! –ü—Ä–æ–≤–µ—Ä—å—Ç–µ email –¥–ª—è –ø–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω–∏—è.', 'success');
                document.getElementById('registerModal').classList.remove('show');
                
                // –û—á–∏—Å—Ç–∫–∞ —Ñ–æ—Ä–º—ã
                document.getElementById('registerUsername').value = '';
                document.getElementById('registerEmail').value = '';
                document.getElementById('registerPassword').value = '';
                document.getElementById('registerConfirmPassword').value = '';
                document.getElementById('agreeTerms').checked = false;
                registerError.style.display = 'none';
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏:', error);
                
                let errorMessage = '–û—à–∏–±–∫–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏. ';
                if (error.code === 'auth/email-already-in-use') {
                    errorMessage = 'Email —É–∂–µ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç—Å—è';
                } else if (error.code === 'auth/invalid-email') {
                    errorMessage = '–ù–µ–≤–µ—Ä–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç email';
                } else if (error.code === 'auth/weak-password') {
                    errorMessage = '–ü–∞—Ä–æ–ª—å —Å–ª–∏—à–∫–æ–º —Å–ª–∞–±—ã–π';
                } else {
                    errorMessage += error.message;
                }
                
                registerError.textContent = errorMessage;
                registerError.style.display = 'block';
            }
        }

        async function signOut() {
            try {
                const { signOut } = window.firebaseModules;
                await signOut(auth);
                showMessage('–í—ã –≤—ã—à–ª–∏ –∏–∑ –∞–∫–∫–∞—É–Ω—Ç–∞', 'info');
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –≤—ã—Ö–æ–¥–∞:', error);
                showMessage('–û—à–∏–±–∫–∞ –≤—ã—Ö–æ–¥–∞', 'error');
            }
        }

        // –§–£–ù–ö–¶–ò–ò –ë–ê–ó–´ –î–ê–ù–ù–´–•
        async function createUserInDatabase(uid, userData) {
            try {
                const { doc, setDoc } = window.firebaseModules;
                await setDoc(doc(db, 'users', uid), userData);
                console.log('–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å–æ–∑–¥–∞–Ω –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö:', uid);
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö:', error);
            }
        }

        async function loadUserData(uid) {
            try {
                const { doc, getDoc } = window.firebaseModules;
                const userDoc = await getDoc(doc(db, 'users', uid));
                
                if (userDoc.exists()) {
                    const userData = userDoc.data();
                    console.log('–î–∞–Ω–Ω—ã–µ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∑–∞–≥—Ä—É–∂–µ–Ω—ã:', userData);
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
                    updateStats(userData.stats);
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –ø—Ä–æ—Ñ–∏–ª—å
                    updateProfileForm(userData.profile);
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
                    updateSettingsForm(userData.settings);
                    
                    // –ó–∞–≥—Ä—É–∂–∞–µ–º –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è
                    loadAchievements(userData.achievements);
                    
                    // –ó–∞–≥—Ä—É–∂–∞–µ–º –∏—Å—Ç–æ—Ä–∏—é
                    loadActivityHistory(uid);
                    
                    return userData;
                } else {
                    console.log('–î–æ–∫—É–º–µ–Ω—Ç –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –Ω–µ –Ω–∞–π–¥–µ–Ω, —Å–æ–∑–¥–∞—ë–º...');
                    await createUserInDatabase(uid, {
                        username: auth.currentUser.displayName,
                        email: auth.currentUser.email,
                        createdAt: new Date().toISOString(),
                        stats: {
                            totalKm: 0,
                            stationsVisited: 0,
                            trainsDriven: 0
                        },
                        achievements: [],
                        settings: {
                            emailNotifications: true,
                            projectNews: true,
                            achievementNotifications: true,
                            darkTheme: false,
                            compactMode: false
                        },
                        profile: {
                            bio: '',
                            favoriteLine: ''
                        }
                    });
                    return await loadUserData(uid);
                }
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –¥–∞–Ω–Ω—ã—Ö –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è:', error);
                return null;
            }
        }

        function updateStats(stats) {
            if (!stats) return;
            
            document.getElementById('totalKm').textContent = stats.totalKm || 0;
            document.getElementById('stationsVisited').textContent = stats.stationsVisited || 0;
            document.getElementById('trainsDriven').textContent = stats.trainsDriven || 0;
            
            // –û–±–Ω–æ–≤–ª—è–µ–º —Å—á–µ—Ç—á–∏–∫ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–π (–≤—Ä–µ–º–µ–Ω–Ω–∞—è –ª–æ–≥–∏–∫–∞)
            const achievementsCount = Math.floor((stats.totalKm || 0) / 10) + 
                                     Math.floor((stats.stationsVisited || 0) / 2) +
                                     Math.floor((stats.trainsDriven || 0) / 3);
            document.getElementById('achievementsCount').textContent = achievementsCount;
        }

        function updateProfileForm(profile) {
            if (!profile) return;
            
            document.getElementById('profileUsername').value = auth.currentUser.displayName || '';
            document.getElementById('profileEmail').value = auth.currentUser.email || '';
            document.getElementById('profileBio').value = profile.bio || '';
            document.getElementById('favoriteLine').value = profile.favoriteLine || '';
        }

        function updateSettingsForm(settings) {
            if (!settings) return;
            
            document.getElementById('emailNotifications').checked = settings.emailNotifications || true;
            document.getElementById('projectNews').checked = settings.projectNews || true;
            document.getElementById('achievementNotifications').checked = settings.achievementNotifications || true;
            document.getElementById('darkTheme').checked = settings.darkTheme || false;
            document.getElementById('compactMode').checked = settings.compactMode || false;
            
            // –ü—Ä–∏–º–µ–Ω—è–µ–º —Ç–µ–º—É
            if (settings.darkTheme) {
                document.body.classList.add('dark-theme');
            } else {
                document.body.classList.remove('dark-theme');
            }
        }

        async function saveProfile() {
            const user = auth.currentUser;
            if (!user) return;
            
            try {
                const { doc, updateDoc } = window.firebaseModules;
                const { updateProfile } = window.firebaseModules;
                
                const profileData = {
                    bio: document.getElementById('profileBio').value,
                    favoriteLine: document.getElementById('favoriteLine').value
                };
                
                // –û–±–Ω–æ–≤–ª—è–µ–º –≤ –±–∞–∑–µ –¥–∞–Ω–Ω—ã—Ö
                await updateDoc(doc(db, 'users', user.uid), {
                    profile: profileData
                });
                
                // –û–±–Ω–æ–≤–ª—è–µ–º –∏–º—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –≤ Firebase Auth
                const newUsername = document.getElementById('profileUsername').value.trim();
                if (newUsername && newUsername !== user.displayName) {
                    await updateProfile(user, {
                        displayName: newUsername
                    });
                    
                    // –û–±–Ω–æ–≤–ª—è–µ–º –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏–µ
                    document.getElementById('userName').textContent = newUsername;
                    document.getElementById('sidebarName').textContent = newUsername;
                }
                
                showMessage('–ü—Ä–æ—Ñ–∏–ª—å —Å–æ—Ö—Ä–∞–Ω—ë–Ω', 'success');
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –ø—Ä–æ—Ñ–∏–ª—è:', error);
                showMessage('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –ø—Ä–æ—Ñ–∏–ª—è', 'error');
            }
        }

        async function saveSettings() {
            const user = auth.currentUser;
            if (!user) return;
            
            try {
                const { doc, updateDoc } = window.firebaseModules;
                
                const settingsData = {
                    emailNotifications: document.getElementById('emailNotifications').checked,
                    projectNews: document.getElementById('projectNews').checked,
                    achievementNotifications: document.getElementById('achievementNotifications').checked,
                    darkTheme: document.getElementById('darkTheme').checked,
                    compactMode: document.getElementById('compactMode').checked
                };
                
                await updateDoc(doc(db, 'users', user.uid), {
                    settings: settingsData
                });
                
                // –ü—Ä–∏–º–µ–Ω—è–µ–º —Ç–µ–º—É
                if (settingsData.darkTheme) {
                    document.body.classList.add('dark-theme');
                } else {
                    document.body.classList.remove('dark-theme');
                }
                
                showMessage('–ù–∞—Å—Ç—Ä–æ–π–∫–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω—ã', 'success');
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫:', error);
                showMessage('–û—à–∏–±–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –Ω–∞—Å—Ç—Ä–æ–µ–∫', 'error');
            }
        }

        async function loadSectionData(section) {
            const user = auth.currentUser;
            if (!user) return;
            
            switch (section) {
                case 'achievements':
                    await loadAllAchievements(user.uid);
                    break;
                case 'history':
                    await loadActivityHistory(user.uid);
                    break;
                case 'overview':
                    await loadUserData(user.uid);
                    break;
            }
        }

        async function loadAchievements(userAchievements) {
            // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è
            const achievements = [
                {
                    id: 'first_station',
                    title: '–ü–µ—Ä–≤–∞—è —Å—Ç–∞–Ω—Ü–∏—è',
                    description: '–ü–æ—Å–µ—Ç–∏—Ç–µ —Å–≤–æ—é –ø–µ—Ä–≤—É—é —Å—Ç–∞–Ω—Ü–∏—é',
                    icon: 'üöá',
                    condition: (stats) => stats.stationsVisited >= 1
                },
                {
                    id: 'metro_explorer',
                    title: '–ò—Å—Å–ª–µ–¥–æ–≤–∞—Ç–µ–ª—å –º–µ—Ç—Ä–æ',
                    description: '–ü–æ—Å–µ—Ç–∏—Ç–µ 5 —Ä–∞–∑–Ω—ã—Ö —Å—Ç–∞–Ω—Ü–∏–π',
                    icon: 'üèôÔ∏è',
                    condition: (stats) => stats.stationsVisited >= 5
                },
                {
                    id: 'train_driver',
                    title: '–ú–∞—à–∏–Ω–∏—Å—Ç',
                    description: '–ü—Ä–æ–µ–¥—å—Ç–µ 10 –∫–º –∑–∞ —Ä—É–ª–µ–º –ø–æ–µ–∑–¥–∞',
                    icon: 'üöÇ',
                    condition: (stats) => stats.totalKm >= 10
                },
                {
                    id: 'metro_master',
                    title: '–ú–∞—Å—Ç–µ—Ä –º–µ—Ç—Ä–æ',
                    description: '–ü—Ä–æ–µ–¥—å—Ç–µ 100 –∫–º –Ω–∞ –ø–æ–µ–∑–¥–∞—Ö',
                    icon: 'üëë',
                    condition: (stats) => stats.totalKm >= 100
                },
                {
                    id: 'frequent_traveler',
                    title: '–ß–∞—Å—Ç—ã–π –ø—É—Ç–µ—à–µ—Å—Ç–≤–µ–Ω–Ω–∏–∫',
                    description: '–£–ø—Ä–∞–≤–ª—è–π—Ç–µ –ø–æ–µ–∑–¥–æ–º 10 —Ä–∞–∑',
                    icon: 'üéØ',
                    condition: (stats) => stats.trainsDriven >= 10
                }
            ];
            
            // –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
            const userData = await loadUserData(auth.currentUser.uid);
            if (!userData) return;
            
            const stats = userData.stats || {};
            
            // –û–±–Ω–æ–≤–ª—è–µ–º –Ω–µ–¥–∞–≤–Ω–∏–µ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏—è
            const recentAchievementsContainer = document.getElementById('recentAchievements');
            recentAchievementsContainer.innerHTML = '';
            
            achievements.slice(0, 2).forEach(achievement => {
                const isUnlocked = achievement.condition(stats);
                const achievementHTML = `
                    <div class="achievement-card ${isUnlocked ? 'unlocked' : 'locked'}">
                        <div class="achievement-icon">${achievement.icon}</div>
                        <div class="achievement-title">${achievement.title}</div>
                        <div class="achievement-desc">${achievement.description}</div>
                    </div>
                `;
                recentAchievementsContainer.innerHTML += achievementHTML;
            });
        }

        async function loadAllAchievements(uid) {
            const userData = await loadUserData(uid);
            if (!userData) return;
            
            const stats = userData.stats || {};
            
            const achievements = [
                { id: 'welcome', title: '–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å', description: '–°–æ–∑–¥–∞–π—Ç–µ –∞–∫–∫–∞—É–Ω—Ç', icon: 'üëã', condition: () => true, unlocked: true },
                { id: 'first_station', title: '–ü–µ—Ä–≤–∞—è —Å—Ç–∞–Ω—Ü–∏—è', description: '–ü–æ—Å–µ—Ç–∏—Ç–µ –ø–µ—Ä–≤—É—é —Å—Ç–∞–Ω—Ü–∏—é', icon: 'üöá', condition: (s) => s.stationsVisited >= 1, unlocked: stats.stationsVisited >= 1 },
                { id: 'five_stations', title: '5 —Å—Ç–∞–Ω—Ü–∏–π', description: '–ü–æ—Å–µ—Ç–∏—Ç–µ 5 —Å—Ç–∞–Ω—Ü–∏–π', icon: '5Ô∏è‚É£', condition: (s) => s.stationsVisited >= 5, unlocked: stats.stationsVisited >= 5 },
                { id: 'ten_km', title: '10 –∫–º –ø—É—Ç–∏', description: '–ü—Ä–æ–µ–¥—å—Ç–µ 10 –∫–º', icon: 'üõ§Ô∏è', condition: (s) => s.totalKm >= 10, unlocked: stats.totalKm >= 10 },
                { id: 'first_train', title: '–ü–µ—Ä–≤—ã–π –ø–æ–µ–∑–¥', description: '–£–ø—Ä–∞–≤–ª—è–π—Ç–µ –ø–æ–µ–∑–¥–æ–º –≤–ø–µ—Ä–≤—ã–µ', icon: 'üöÇ', condition: (s) => s.trainsDriven >= 1, unlocked: stats.trainsDriven >= 1 },
                { id: 'five_trains', title: '5 –ø–æ–µ–∑–¥–æ–≤', description: '–£–ø—Ä–∞–≤–ª—è–π—Ç–µ 5 —Ä–∞–∑–Ω—ã–º–∏ –ø–æ–µ–∑–¥–∞–º–∏', icon: '5Ô∏è‚É£', condition: (s) => s.trainsDriven >= 5, unlocked: stats.trainsDriven >= 5 },
                { id: 'hundred_km', title: '100 –∫–º', description: '–ü—Ä–æ–µ–¥—å—Ç–µ 100 –∫–º', icon: 'üíØ', condition: (s) => s.totalKm >= 100, unlocked: stats.totalKm >= 100 },
                { id: 'metro_expert', title: '–≠–∫—Å–ø–µ—Ä—Ç –º–µ—Ç—Ä–æ', description: '–ü–æ—Å–µ—Ç–∏—Ç–µ 10 —Å—Ç–∞–Ω—Ü–∏–π –∏ –ø—Ä–æ–µ–¥—å—Ç–µ 50 –∫–º', icon: 'üéì', condition: (s) => s.stationsVisited >= 10 && s.totalKm >= 50, unlocked: stats.stationsVisited >= 10 && stats.totalKm >= 50 }
            ];
            
            const container = document.getElementById('allAchievements');
            container.innerHTML = '';
            
            achievements.forEach(achievement => {
                const achievementHTML = `
                    <div class="achievement-card ${achievement.unlocked ? 'unlocked' : 'locked'}">
                        <div class="achievement-icon">${achievement.icon}</div>
                        <div class="achievement-title">${achievement.title}</div>
                        <div class="achievement-desc">${achievement.description}</div>
                    </div>
                `;
                container.innerHTML += achievementHTML;
            });
        }

        async function loadActivityHistory(uid) {
            try {
                // –í—Ä–µ–º–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ –¥–ª—è –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏
                const activities = [
                    {
                        icon: 'üöá',
                        title: '–ü–æ—Å–µ—â–µ–Ω–∏–µ —Å—Ç–∞–Ω—Ü–∏–∏ "–ö–æ–º—Å–æ–º–æ–ª—å—Å–∫–∞—è"',
                        time: '10 –º–∏–Ω—É—Ç –Ω–∞–∑–∞–¥'
                    },
                    {
                        icon: 'üöÇ',
                        title: '–£–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –ø–æ–µ–∑–¥–æ–º ‚Ññ101',
                        time: '2 —á–∞—Å–∞ –Ω–∞–∑–∞–¥'
                    },
                    {
                        icon: 'üèÜ',
                        title: '–ü–æ–ª—É—á–µ–Ω–æ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–µ "–ü–µ—Ä–≤–∞—è —Å—Ç–∞–Ω—Ü–∏—è"',
                        time: '–í—á–µ—Ä–∞'
                    },
                    {
                        icon: 'üìù',
                        title: '–û–±–Ω–æ–≤–ª–µ–Ω –ø—Ä–æ—Ñ–∏–ª—å',
                        time: '3 –¥–Ω—è –Ω–∞–∑–∞–¥'
                    },
                    {
                        icon: 'üéÆ',
                        title: '–ù–∞—á–∞—Ç–∞ –Ω–æ–≤–∞—è –∏–≥—Ä–∞',
                        time: '–ù–µ–¥–µ–ª—é –Ω–∞–∑–∞–¥'
                    }
                ];
                
                const container = document.getElementById('activityHistory');
                container.innerHTML = '';
                
                activities.forEach(activity => {
                    const activityHTML = `
                        <div class="history-item">
                            <div class="history-icon">
                                <i class="fas">${activity.icon}</i>
                            </div>
                            <div class="history-content">
                                <div class="history-title">${activity.title}</div>
                                <div class="history-time">${activity.time}</div>
                            </div>
                        </div>
                    `;
                    container.innerHTML += activityHTML;
                });
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ –∏—Å—Ç–æ—Ä–∏–∏:', error);
            }
        }

        // –§–£–ù–ö–¶–ò–Ø –î–õ–Ø –°–û–ó–î–ê–ù–ò–Ø –ù–û–í–´–• –ó–ê–ü–ò–°–ï–ô (–¥–ª—è —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è)
        async function addTestData() {
            const user = auth.currentUser;
            if (!user) return;
            
            try {
                const { doc, updateDoc } = window.firebaseModules;
                
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É
                await updateDoc(doc(db, 'users', user.uid), {
                    'stats.totalKm': 25,
                    'stats.stationsVisited': 3,
                    'stats.trainsDriven': 2
                });
                
                // –î–æ–±–∞–≤–ª—è–µ–º –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–µ
                await updateDoc(doc(db, 'users', user.uid), {
                    achievements: ['first_station', 'train_driver']
                });
                
                showMessage('–¢–µ—Å—Ç–æ–≤—ã–µ –¥–∞–Ω–Ω—ã–µ –¥–æ–±–∞–≤–ª–µ–Ω—ã', 'success');
                await loadUserData(user.uid);
                
            } catch (error) {
                console.error('–û—à–∏–±–∫–∞ –¥–æ–±–∞–≤–ª–µ–Ω–∏—è —Ç–µ—Å—Ç–æ–≤—ã—Ö –¥–∞–Ω–Ω—ã—Ö:', error);
            }
        }

        // –§–£–ù–ö–¶–ò–Ø –°–û–û–ë–©–ï–ù–ò–ô
        function showMessage(text, type = 'info') {
            const messageEl = document.createElement('div');
            messageEl.className = `message ${type}`;
            messageEl.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'}"></i>
                <span>${text}</span>
            `;
            
            document.body.appendChild(messageEl);
            
            setTimeout(() => {
                messageEl.style.animation = 'slideOut 0.3s ease forwards';
                setTimeout(() => {
                    messageEl.remove();
                }, 300);
            }, 3000);
        }

        // –≠–∫—Å–ø–æ—Ä—Ç —Ñ—É–Ω–∫—Ü–∏–π –¥–ª—è —Ç–µ—Å—Ç–∏—Ä–æ–≤–∞–Ω–∏—è
        window.test = {
            addTestData,
            loadUserData: () => loadUserData(auth.currentUser?.uid),
            getCurrentUser: () => auth.currentUser
        };
    </script>
</body>
</html>
